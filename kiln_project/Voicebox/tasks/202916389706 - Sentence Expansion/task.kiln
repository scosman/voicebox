  "output_json_schema": "{\"type\":\"object\",\"properties\":{\"restate_context\":{\"title\":\"restate_context\",\"type\":\"string\",\"description\":\"Restate the context we have about the user's conversation, and the goal of this task. This is plaintext, sentence formatted.\"},\"potential_topics\":{\"title\":\"potential_topics\",\"type\":\"string\",\"description\":\"List 6 topics you predict the user may be trying to communicate next given the inputs and task goal. This is plaintext, list formatted.\"},\"options_json\":{\"title\":\"options_json\",\"type\":\"string\",\"description\":\"The options json.\"}},\"required\":[\"restate_context\",\"potential_topics\",\"options_json\"]}",
